@macro bibcite{ref}
@set \ref\isref true
@set generate-references true
@xref{\ref\,\ref\,\ref\}
@end macro

@macro bibreferences
@ifset generate-references
@table @cite
@include references.texi
@end table
@end ifset
@c %**else if
@ifclear generate-references
(References is nonexisent)
@end ifclear
@end macro
